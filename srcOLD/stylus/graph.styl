.person-network-graph
	.title
		position absolute
		margin 2em
		span.name
			font-weight bold

svg
	.link
		stroke-width 1px
		fill none
		stroke mediumGray

		// I just learned about scales!
		&.light-stroke
			stroke-width 1px
		&.medium-stroke
			stroke-width 4px
		&.heavy-stroke
			stroke-width 9px

	text
		baseSize = 10px
		font-size baseSize
		pointer-events none


		&:hover
			// font-size baseSize * 1.5
			transition font-size .2s ease-out
			cursor pointer

	.text rect
		fill lightGray
		stroke mediumGray
		stroke-width .2px
		cursor pointer
	.text:hover
		rect
			fill mediumGray
			stroke darkGray
		text
			fill white

	circle
		cursor pointer
		color darkGray

		&.male
			fill #6B8EFF
		&.female
			fill #35BD00
		&.unknown
			fill mediumGray