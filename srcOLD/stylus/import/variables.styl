// Colors

lightGray = #fafafa
darkGray = #444
mediumGray = (lightGray / 2) + (darkGray / 2)

lightRed = #d29d9d
veryLightRed = lighten(lightRed, 80%)
darkRed = #a84d4d

redHue = #dc1a1a

// Color things

backgroundColor = white
baseColor = #129275
baseHighlightColor = lighten(baseColor, 10%)
labelColor = #888
inputTextColor = #555
linkColor = #6295BA
linkUnderlineColor = #D0DFEB

fieldErrorColor = redHue

lightBackgroundColor = #f2f9f9
lightBackgroundEdgeColor = darken(lightBackgroundColor, 10%)

buttonColor = baseColor
buttonActiveColor = lighten(buttonColor, 20%)

borderColor = #eee
activeBorderColor = darken(borderColor, 15%)

// Fonts

bodyFont = 'Open Sans', sans-serif
labelFont = 'Open Sans', sans-serif
baseFontSize = 16px

fontAwesome = 'FontAWesome'

// Misc

borderRadius = 3px

maxFacetHeight = 300px

inputHorizontalPadding = .4em
inputVerticalPadding = .6em

fontAwesomeCheckmark = '\f00c'
fontAwesomeClose = '\f00d'