.hire-multi-form
	position relative
	display inline-block

	& > .hire-forms-link-form, & > .names-form
		margin-bottom 20px

	& > .names-form + button + ul
		margin 10px 0 0 0

	button.add
		button()
		background-color wwLightTurquoise
		color wwLighterTurquoise
		font-weight bold
		right -70px
		padding 4px 12px
		text-transform uppercase
		top 5px
		z-index 1000
		position absolute

		&:hover
			button_box_shadow()

	& > .hire-forms-link-form + button.add
		top 56px


	& > ul
		margin-top 40px
		margin-bottom 40px

		& > li
			position relative
			margin-bottom 0

			& > button.hire-remove-form
				multi_form_button()
				top 0

			.hire-forms-link-form, .names-form
				ul
					li
						margin-bottom 0
						transition margin-bottom 300ms

						input
							background none
							border none
							height 24px
							outline none
							transition all 300ms

			.hire-forms-link-form
				margin-bottom 0

				ul
					li:last-child
						input
							color #AAA

			button.hire-remove-form
				top -4px
				transition top 300ms

			&:hover
				.hire-forms-link-form, .names-form
					ul
						li
							input
								background white
								border 1px solid #CCC
								height 32px

				.hire-forms-link-form
					ul
						li
							margin-bottom 20px

							&:last-child
								input
									color initial

				button.hire-remove-form
					top 0