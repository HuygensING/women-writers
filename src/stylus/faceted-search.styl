.hire-faceted-search
	padding 0
	padding-top 70px


.hire-faceted-search > .hire-faceted-search-filters
	width 25%
	float left

.hire-faceted-search > .hire-faceted-search-results
	width 75%
	float right

svg
	circle
		fill #009688

.hire-range-slider
	&> path:first-of-type, path:nth-of-type(2)
		stroke-width 0
	&> path:nth-of-type(3)
		stroke-width 5
		stroke #eee

	g.range-line
		path
			stroke #bbb
			&.hovering,
			&:hover
				stroke #ddd
		circle
			fill #777
			&.hovering,
			&:hover
				fill #aaa

li.hire-range-facet
	background-color #fff
	margin-top 20px
	padding 20px

li.hire-range-facet header
	margin-bottom 20px

li.hire-range-facet label
	position relative
	top -66px
	float left
	&:first-of-type
		margin-left calc(100% - 85px)
		&::after
			content: " -"

.hire-range-facet > div > label:nth-of-type(2)
	float left
	margin-left 4px

svg.hire-icon.checked
	path:last-child
		fill #009688


.search-authors .hire-faceted-search-results > header > ul,
.search-publications .hire-faceted-search-results > header > ul,
.reception-search > ul
	margin-top 10px
	border 1px solid #ccc
	border-radius 8px
	padding 10px 20px
	& > li
		width 50%
		display inline-block
		vertical-align top
	& h4
		margin 0
		margin-bottom 10px

.reception-search > ul
	width 67%
	margin-bottom 20px
	float right


.reception-search > ul
	top auto

.app > div.receptions > .hire-tabs, .app > .hire-tabs
	padding 0

ul.hire-faceted-search-current-query > li > label
	width auto
	margin-right 4px
	width 100px

ul.hire-faceted-search-current-query > li > ul
	width calc(100% - 105px)


.hire-faceted-search-results svg.loader
	position fixed
	left 0
	top 300px


.search-collectives .hire-faceted-search-filters .hire-faceted-search-text-search header > h3
	display none

.last-modified .hire-faceted-search-results li > label > span
	display inline-block
	width calc(100% - 120px)
	height 1.5em
	vertical-align middle
	white-space nowrap
	overflow hidden
	text-overflow ellipsis

.last-modified .hire-faceted-search-results li > label > .modified-date
	display inline-block
	vertical-align top
	width 120px
	float right
	font-size 0.9em
	color #666

.hire-faceted-search-results > header
	border none



.hire-faceted-search-results > ol.hire-faceted-search-result-list > li > label
	margin-left 20px
	border-bottom: 1px solid #e3e3e3
	display inline-block
	width calc(100% - 40px)
	color #333
	padding-bottom 20px
	& > .names
		max-width calc(60% - 20px)
		white-space nowrap
		overflow hidden
		text-overflow ellipsis

	& > .dates
		color #666
		margin-left 20px
		max-width 15%
		white-space nowrap
		overflow hidden
		text-overflow ellipsis

	& > .residence-location
		float right
		display inline-block
		max-width 25%
		white-space nowrap
		overflow hidden
		text-overflow ellipsis

	& > .title
		display inline-block
		max-width 70%

	& > .author-name
		color #666
		font-style italic
		float right
		max-width 25%
		white-space nowrap
		overflow hidden
		font-size .8em
		text-overflow ellipsis


li.hire-list-facet > header > h3,
li.hire-faceted-search-text-search > header > h3
	font-size 1em


li.hire-list-facet > ul > li.hire-list-facet-list-item label,
li.hire-list-facet > ul > li.hire-list-facet-list-item > span.count
	font-size .8em


.hire-faceted-search-results > ol.hire-faceted-search-result-list.numbered, 
.hire-faceted-search-results > ol.hire-faceted-search-result-list { 
	counter-reset: item;
	list-style-type: none;
	padding-left: 0;
}

.hire-faceted-search-results > ol.hire-faceted-search-result-list > li:before {
	content: counter(item) " ";
	counter-increment: item;
	display: inline-block;
	width 20px
	vertical-align top
}