.status-indicator
	position fixed
	top 0
	left 0
	bottom 0
	right 0
	width 100%
	height 100%

	background rgba(255, 255, 255, 0.9)
	color black

	.box
		position relative
		top 40%
		margin 0 auto auto
		box-sizing border-box

		background white
		box-shadow 0 0 50px rgba(0,0,0,0.05)
		border-radius 3px
		padding 2em

		width 400px

		text-align center

		i
			margin-right .5em
		.title
			font-weight bold
		button
			font-size 16px
			margin-top 1.33em

	&.status-loading
		.error, .success
			display none
		.loading
			display block
	&.status-error
		.error
			display block
		.success, .loading
			display none
	&.status-success
		.error, .loading
			display none
		.success
			display block