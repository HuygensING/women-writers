inline_block()
	display inline-block
	box-sizing border-box
	vertical-align top

input()
	width 400px
	height 32px
	border 1px solid #CCC
	padding-left 6px
	box-sizing border-box
	font-size 1em

well()
	background white
	box-shadow 1px 1px 3px rgba(0, 0, 0, 0.12), -1px -1px 1px rgba(0, 0, 0, 0.04)
	padding 20px

small()
	font-style italic
	font-size 0.8em
	color #AAA

#view
	background #EEE
	padding 40px 0

	& > .hire-tabs
		margin auto
		width 960px

		& > ul, & > .hire-tab
			inline_block()

		& > ul
			width 20%

			li
				cursor pointer

				&.active
					font-weight bold
					font-size 1.2em
					transition font-size 150ms

		& > .hire-tab
			width 80%

			& > .hire-forms-form
				well()

			& > .temp-data
				well()
				margin-top 20px
				background-color #EEE
				color #AAA
				font-size 0.8em

				ul > li
					margin-bottom 4px

				h2
					font-size 1.2em
					margin 0 0 10px 0

				label, span
					inline_block()

				label
					width 140px

				span
					max-width 500px

.hire-empty-list
	small()

.hire-forms-form > ul > li
	margin-bottom 20px

	label, label + div
		inline_block()

	label
		width 140px

	input, textarea
		input()

.hire-select, .hire-forms-autocomplete
	position relative

	.input-container
		position relative
		height 32px
		border 1px solid #CCC
		padding-left 6px
		line-height 32px
		box-sizing border-box

		button
			position absolute
			right -3px
			top 0
			height 31px
			width 31px

	ul.hire-options
		position absolute
		background white
		border 1px solid #CCC
		max-height 400px
		overflow-y auto
		width 100%
		box-sizing border-box
		margin-top -1px

		li
			line-height 32px
			padding-left 6px
			cursor pointer

			&:hover, &.highlight
				background lightyellow

			&.selected:before
				color baseColor
				content "âœ“"

			span.highlight
				font-weight bold
				text-decoration underline


.hire-select
	width 397px

	ul.hire-options
		width 367px
		top 0


.hire-multi-form
	position relative
	display inline-block

	& > ul
		margin-bottom 40px

		& > li
			position relative
			margin-bottom 20px

			& > button.hire-remove-form
				width 24px
				position absolute
				right -40px
				top 0

	& > ul + button.hire-add-form
		width 24px
		position absolute
		right -40px
		bottom 0

.hire-forms-form
	&.names-form > ul
		width 400px

		& > li
			inline_block()
			margin-bottom 0

			&:first-child
				width 36%
				margin-right 4%

			&:last-child
				width 60%

			input
				width 100%

.hire-forms-link-form
	margin-bottom 40px

	& > ul > li:last-child
		.hire-input.invalid
			.hire-forms-invalid-message
				display none

			input
				border 1px solid red