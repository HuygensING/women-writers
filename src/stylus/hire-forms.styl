inline_block()
	display inline-block
	box-sizing border-box
	vertical-align top

#view
	& > .hire-tabs
		margin auto
		margin-top 40px
		width 960px

		& > ul, & > .hire-tab
			inline_block()

		& > ul
			width 20%

		& > .hire-tab
			width 80%


.hire-forms-form > ul > li
	margin-bottom 20px

	label, label + div
		inline_block()

	label
		width 140px

	input
		width 400px
		height 32px
		border 1px solid #CCC
		padding-left 6px
		box-sizing border-box

	textarea
		width 400px

.hire-select
	width 397px
	position relative

	.input-container
		position relative
		height 32px
		border 1px solid #CCC
		padding-left 6px
		line-height 32px
		box-sizing border-box

		button
			position absolute
			right -3px
			top 0
			height 31px
			width 31px

	ul.hire-options
		position absolute
		background white
		width 367px
		border 1px solid #CCC
		top 0
		max-height 400px
		overflow-y auto

		li
			line-height 32px
			padding-left 6px
			cursor pointer

			&:hover
				background lightyellow


.hire-multi-form
	position relative

	& > ul
		margin-bottom 40px

		& > li
			position relative
			margin-bottom 20px

			& > button.hire-remove-form
				width 24px
				position absolute
				right -40px
				top 0

	& > ul + button.hire-add-form
		width 24px
		position absolute
		right -40px
		bottom 0

.hire-forms-form
	&.names-form > ul
		width 400px

		& > li
			inline_block()
			margin-bottom 0

			&:first-child
				width 36%
				margin-right 4%

			&:last-child
				width 60%

			input
				width 100%