.view
	position relative

	h2
		font-weight normal

	h4.author
		font-weight normal
		text-align right
		color darkGray

	ul.fields
		list-style none
		padding 0
		margin 0

		label
			color mediumGray
			font-style italic
			min-width 190px
			display inline-block
			line-height 1.8em

		.value
			display inline

	p.versions
		text-align right
		margin-top 1em

		a:first-child
			margin-left 1em

		a:after
			content " | "
			color black
		
		a:last-child:after
			content ""

	.receptions
		h4
			color mediumGray
			font-weight normal

		&, & ul
			list-style none
			margin 0
			padding 0

		& ul
			line-height 1.5em
			margin-left .5em
			font-size .9em

	.revisions
		position absolute
		top 0
		margin-left -320px
		width 300px
		box-sizing border-box
		padding 10px

		h5
			color mediumGray
			margin 0