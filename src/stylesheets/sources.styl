#view
	.sources
		position relative
		ul
			list-style none
			padding 0
			margin 0

			&.index
				// FONT-SIZE
				color mediumGray
				position absolute
				left -14em
				width 14em
				li
					float left
					margin .25em
					width 2em
					text-align center
					&:hover 
						cursor pointer
						background-color lightGray
						border-radius borderRadius

		.letter
			clearfix()
			h2
				float left
				margin 0

			li
				margin 0 0 1em 3em
				.notes
					// FONT-SIZE