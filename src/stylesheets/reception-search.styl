#search
	.receptions
		.close-button
			text-align right
			padding-right: 0.5em
			margin-top: 0.1em
			cursor pointer
		
		.disabled
			pointer-events none
			color gray
			
		.search-receptions
			margin-top 0.5em
			margin-bottom 1em
			float right
			
		.reception-search
			background-color #fafafa
			float left
			height 7em
			width 100%
			border-bottom 1px solid #D0E9E9
			border-top 1px solid #D0E9E9
			display table
			padding-top 1em
			
			.reception-query
				display table-cell
				padding 0 1em 0.5em
				
				.edit-link
					display none
					
			
			.reception-query:hover
				background-color #F1F1F1
				border-left 1px dashed #D0E9E9
				border-right 1px dashed #D0E9E9
				border-top 1px dashed #D0E9E9
				border-top-left-radius 10px
				border-top-right-radius 10px
				
				.edit-link
					display inline
					cursor pointer
			
			.reception-query.selected, .reception-query.selected:hover
				background-color #EAEAEA
				border-left 1px solid #D0E9E9
				border-right 1px solid #D0E9E9
				border-top 1px solid #D0E9E9
				border-top-left-radius 10px
				border-top-right-radius 10px
				
			.order-and-group
				display none
					
		.relation-type-selector
			background-color #fafafa
			border-bottom 1px solid #D0E9E9
			border-top 1px solid #D0E9E9
			float left
			width 100%
			display none
			
			.relation-type-selector-content
				margin-top -1.5em
				
				.selected-relations
					display none
					
		.reception-source-search
			margin-top -1.5em
			margin-bottom 1em
		
		.reception-searcher
			background-color #fafafa
			border-bottom 1px solid #D0E9E9
			border-top 1px solid #D0E9E9
			float left
			width 100%
			display none
			
			.faceted-search
				width 100%
				overflow-x scroll
				margin-top -1.0em
				padding-top 
				height 100%
				
				.fa-compres
					display none
				
				.fa-refresh
					display none
				
				.search-placeholder
					display none
				
				.facets
					display table
					
					.facet
						display table-cell
						width 300px

		.results
			padding-top: 2em
			width 100%
			float left
			margin 0px
			.results-table
				float left
				width 100%
				border-collapse collapse
				
				.results-head
					tr
						th
							border-bottom 1.5px solid #D0E9E9
							text-align justify
							padding 0 1em
							
				.results-body
					tr
						td
							padding 1em
							border-bottom 1px dashed #D0E9E9
							
			.next
				cursor pointer
				float right
				font-weight bold
				
			.prev
				cursor pointer
				float left
				font-weight bold
		
		.busy-overlay
			display none
			position fixed
			top 0
			left 0
			height 100%
			width 100%
			border-radius 0px
			background-color rgba(0, 0, 0, 0.7)
			
			.center-spinner
				position relative
				margin 25em auto
				width 5em
				text-align center
				background-color #FFFFFF
				border-radius 10px
				opacity 1