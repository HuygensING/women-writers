#search
	.receptions
		.close-button
			text-align right
			padding-right: 0.5em
			margin-top: 0.1em
			cursor pointer
			
		.disabled
			pointer-events none
			color gray
			
		.search-receptions
			margin-top 0.5em
			margin-bottom 1em
			float right
			
		.reception-search
			background-color #fafafa
			float left
			height 7em
			width 100%
			border-bottom 1px solid #D0E9E9
			border-top 1px solid #D0E9E9
			display table
			padding-top 1em
			
			.reception-query
				display table-cell
				padding 0 1em 0.5em
				
				.edit-link
					display none
					
			.reception-query.selected
				border-left 1px solid #D0E9E9
				border-right 1px solid #D0E9E9
				border-top 1px solid #D0E9E9
				border-top-left-radius 10px
				border-top-right-radius 10px
			
			.reception-query:hover
				border-left 1px dashed #D0E9E9
				border-right 1px dashed #D0E9E9
				border-top 1px dashed #D0E9E9
				border-top-left-radius 10px
				border-top-right-radius 10px
				
				.edit-link
					display inline
					cursor pointer
			
			.order-and-group
				display none
					
		.relation-type-selector
			background-color #fafafa
			border-bottom 1px solid #D0E9E9
			border-top 1px solid #D0E9E9
			float left
			height 8em
			width 100%
			display none
			
			.relation-type-selector-content
				margin-top -1.5em
				
				.selected-relations
					display none
					
			
		.reception-searcher
			background-color #fafafa
			border-bottom 1px solid #D0E9E9
			border-top 1px solid #D0E9E9
			float left
			height 18em
			width 100%
			display none
			
			.faceted-search
				width 100%
				overflow-x scroll
				margin-top -1.0em
				padding-top 
				height 100%
				
				.fa-compres
					display none
				
				.fa-refresh
					display none
				
				.search-placeholder
					display none
				
				.facets
					display table
					
					.facet
						display table-cell
						width 300px

		.results
			padding-top: 2em
			width 100%
			float left
			margin 0px
			.results-table
				float left
				width 100%
				border-collapse collapse
				
				.results-head
					tr
						th
							border-bottom 1.5px solid #D0E9E9
							text-align justify
							
				.results-body
					tr
						td
							padding 1em 0em
							border-bottom 1px dashed #D0E9E9
							
			.next
				cursor pointer
				float right
				font-weight bold
				
			.prev
				cursor pointer
				float left
				font-weight bold
