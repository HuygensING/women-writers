#search
	.receptions
		.reception-search
			background-color #fafafa
			float left
			height 7em
			width 100%
			border-bottom 1px solid #D0E9E9
			border-top 1px solid #D0E9E9
			display table
			padding-top 1em
			
			.reception-query
				display table-cell
				padding 0 1em 0.5em
				
				.edit-link
					display none
			
			.reception-query:hover
				border-left 1px solid #D0E9E9
				border-right 1px solid #D0E9E9
				border-top 1px solid #D0E9E9
				border-top-left-radius 10px
				border-top-right-radius 10px
				
				.edit-link
					display inline
					cursor pointer
					
		.relation-type-selector
			background-color #fafafa
			border-bottom 1px solid #D0E9E9
			border-top 1px solid #D0E9E9
			float left
			height 8em
			width 100%
			display none
			
			.close-button
				text-align right
				padding-right: 0.5em
				margin-top: 0.1em
				cursor pointer
			
			.relation-type-selector-content
				margin-top -1.5em
				
				.selected-relations
					display none
#search
	.receptions
		.results
			padding-top: 2em
			width 100%
			float left
			margin 0px
			.results-table
				width 100%
				border-collapse collapse
				
				.results-head
					tr
						th
							border-bottom 1.5px solid #D0E9E9
							text-align justify
							
				.results-body
					tr
						td
							padding 1em 0em
							border-bottom 1px dashed #D0E9E9

