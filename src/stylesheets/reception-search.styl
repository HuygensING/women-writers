bottomBorder(clr)
	border-bottom 5px solid clr

#search
	.receptions
		.close-button
			text-align right
			padding-right: 0.5em
			margin-top: 0.1em
			cursor pointer

		.disabled
			pointer-events none
			color gray

		.reception-search
			color darkGray
			background-color lightGray
			border-bottom 1px solid lightBackgroundEdgeColor

			queryBuilderHeight = 3em
			queryBuilderMarginTop = -3em

			.centered.query
				position relative
				line-height 3em
				max-height queryBuilderHeight // which is the .tabs height (3em lh + 2*5px vpad)
				overflow-y hidden

				.tabs, .select-type
					transition margin-top .15s ease-out .1s

				&.reception-on-selected
					min-height queryBuilderHeight
					max-height none
					height auto
					.select-type // move out of the way
						margin-top queryBuilderMarginTop

			.select-type
				line-height queryBuilderHeight
				.link
					margin 0 .5em

			.tabs
				position relative

				.on
					display inline-block
					vertical-align top
					color mediumGray
					margin 0 0.2em

				.tab
					display inline-block
					vertical-align top
					padding 0 0.3em
					max-height 0
					transition max-height .25s ease-out

					cursor pointer

					&:hover
						background-color darken(lightGray, 5%)
						max-height 200px

					&.selected
						padding-bottom 0
						bottomBorder(lightBackgroundEdgeColor)

					.options
						width 0
						height 0
						overflow hidden
					&:hover .options
						width auto
						height auto

					&.search
						float right
						vertical-align middle
						&, &:hover
							border none
							background-color transparent

						// to vertically center button
						&:before
							display inline-block
							content ''
							height 100%
							vertical-align middle
							margin-right -0.25em

						button
							display inline-block
							vertical-align middle
							margin-top -2px
							width 6em

						i
							margin-right .5em

		.reception-source-search
			padding 1em
			text-align center
			i
				margin-right 0.5em

		.query-builder
			background-color lightGray
			border-bottom 1px solid lightBackgroundEdgeColor
			float left
			width 100%
			display none

			.faceted-search
				&, & form .facet
					background-color lightGray

				// height 100%

				.search-placeholder
					width 33%
					display inline-block
					float left
				.facets
					.facet
						display inline-block
						width 33%
						float left

		.query-editor
			transition all 0.1s ease-out 0s
		&.searching
			.query-editor
				opacity 0.3

		.reception-results
			.results-table
				width 100%
				border-collapse collapse

				.results-body
					counter-reset reception-counter 0

					tr
						counter-increment reception-counter

					td
						vertical-align top
						padding .6em 1em
						&:first-child:before
							results-counter-style(reception-counter)
							float left
							margin-left -4em
							width 3em

			.next
				cursor pointer
				float right
				font-weight bold
				
			.prev
				cursor pointer
				float left
				font-weight bold