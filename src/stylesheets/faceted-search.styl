.faceted-search
	position relative

	font-size .9em

	padSize = 3%
	inputTextPadding = .4em

	input[type=text]
		width auto

	.text-search
		background-color lightBackgroundColor
		border-bottom: 1px solid lightBackgroundEdgeColor

		position relative
		padding padSize
		.search-input
			input
				width 100%
				padding 0 inputTextPadding
				line-height 2em
			i
				position absolute
				right inputTextPadding
				top 0
				line-height 2em
				padding 1em

		.fa-times // for hiding the options menu, but redundant, imho
			display none

		.cell-1 // match case -- nobody's going to use that
			display none
		.row-1 .cell-2
				display inline-block
				label
					cursor pointer
					border 1px solid transparent
					border-radius 3px
					padding .3em
					font-size .8em

					&:hover
						border 1px solid rgba(0,0,0,0.1)
				input
					display none

	.facets-menu
		background-color lightBackgroundColor

		list-style none
		padding 1em padSize
		margin 0
		border-bottom 1px solid lightBackgroundEdgeColor

		button
			background-color lightBackgroundEdgeColor

			&:hover
				background-color baseColor

		.switch
			display none
		.reset
			float right

	hr
		display none

