.faceted-search
	position relative

	background-color lightBackgroundColor

	input[type=text]
		width auto

	.control-panel
		padding 13px 13px 0 13px

		text-align center

		&:after
			display block
			content ""
			clear both

		.btn
			display inline-block

			&:first-child
				margin-right 33%

			text-align center

			font-size .7em
			font-weight 100

			background-color transparent
			color darkGray

			transition all .15s ease 0s
			border 1px solid transparent

			&:hover
				border 1px solid darkGray

			i
				margin-right .5em

	form
		border-radius 0
		box-shadow none

	form .search-placeholder .facet.search button
		button-style()
		font-weight normal
		box-shadow none
		background-color transparent
		border 1px solid mediumGray
		color mediumGray
		text-transform uppercase
		font-size .7em
		letter-spacing .06em

		&:hover
			background-color lightBackgroundEdgeColor
			border none

	form .facet
		background-color lightBackgroundColor		
		padding 1em 0

		header h3
			font-size 13px

		.container
			max-height maxFacetHeight
			overflow-y scroll

		.placeholder
			padding 0 13px

		.options
			background-color transparent
			border-top 1px solid lightBackgroundEdgeColor
			border-bottom 1px solid lightBackgroundEdgeColor
			border-radius 0
			box-shadow none

			padding 0

			label
				margin-left .5em
				text-transform uppercase
				font-size .8em
				color darkGray

				cursor pointer

			input[name="all"]
				display none

			input[name="filter"]
				margin 4px 0

		&.list
			ul
				list-style none
				padding 0
				margin 0

				li 
					font-family sans-serif
					font-size 13px
					i
						&.fa-check-square-o:before
							color mediumGray
							content "\f105" // nicer checkmark
						&.fa-square-o:before
							color mediumGray
							content "\f105" // nicer checkmark
							visibility hidden // but don't show, to keep things lined up

					label
						cursor pointer
						margin 0 50px 0 4px
						&:hover
							text-decoration underline
					.count
						width 50px // support more digits than 4