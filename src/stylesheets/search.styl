.results
	counter-reset li-result

	h4
		.order-by
			span
				font-weight normal
				margin-right .5em
			display inline
			float right

	.cursor
		no-user-select()
		position relative
		margin-bottom 1em
		height 2em
		font-size .9em

		.prev, .next
			position absolute
			display inline-block
			padding 1em
			top 0

			font-weight bold
			cursor pointer

		.prev
			left 0
		.next
			right 0

		.position
			display block
			width 200px
			margin 0 auto
			text-align center
			padding 1em

		.loader
			small-loader-style()
			top 16px
			margin 0 auto
			display none
			position relative

	ol
		list-style none
		padding 0
		margin 0

		color mediumGray

		li
			position relative
			counter-increment li-result

			line-height 2em
			border-top 1px solid lightBackgroundEdgeColor

			a
				display block
				height 100%

				border-bottom none

				color black

				&:before
					content counter(li-result)
					position absolute
					font-size .8em
					width 3em
					left -3.5em
					text-align right

					color mediumGray

				&:hover
					color linkColor

			&:last-child
				a
					border-bottom 1px solid lightBackgroundEdgeColor