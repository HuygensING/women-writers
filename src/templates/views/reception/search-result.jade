if response
	span.found.smallest-text= response.numFound + ' receptions found'

	.num-rows.smallest-text
		span Show
		ul
			each num in [50, 100, 250, 500]
				li.link(data-result-rows=num)= num
		span results

	if response['_prev']
		p.prev(href=response['_prev']) « Previous
	if response['_next']
		p.next(href=response['_next']) Next »
	if response.numFound > 0
		table.results-table.smallest-text
			thead.results-head
				tr
					th.results-title-header= response.results[0]['^sourceType'] == 'person' ? 'Person' : 'Title'
					th.results-type-header Type
					th.results-reception-header Reception
			tbody.results-body(style="counter-reset: reception-counter " + response.start)
				each ref in response.refs
					tr
						td
							a(href=config.viewUrl(relIds[ref.id]['^sourceId']))= ref.sourceName
						td= config.receptionTypeLabel(ref.relationName)
						td
							a(href=config.viewUrl(relIds[ref.id]['^targetId']))= ref.targetName
	else
		p No results found